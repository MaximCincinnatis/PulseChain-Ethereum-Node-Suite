# Network Selection (pulsechain or ethereum)
NETWORK=pulsechain

# Node Type (full or archive)
NODE_TYPE=full

# Client Selection
EXECUTION_CLIENT=geth
CONSENSUS_CLIENT=lighthouse

# Client Images
EXECUTION_CLIENT_IMAGE=ethereum/client-go:latest
CONSENSUS_CLIENT_IMAGE=sigp/lighthouse:latest

# Grafana Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Resource Limits (adjust based on your system)
EXECUTION_CPU_LIMIT=4
EXECUTION_MEMORY_LIMIT=8G
CONSENSUS_CPU_LIMIT=2
CONSENSUS_MEMORY_LIMIT=4G 